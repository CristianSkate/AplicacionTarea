<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnLimpiarMan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.cmt.unidad1.activity.MantenedorClientesActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="59dp"
        android:text="ID Del Cliente" />

    <EditText
        android:id="@+id/txtIdManCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:ems="10" >

        
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtIdManCliente"
        android:layout_below="@+id/txtIdManCliente"
        android:text="Nombre Cliente" />

    <EditText
        android:id="@+id/txtNomManCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/btnLimpiarCliente"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNomManCliente"
        android:layout_below="@+id/txtNomManCliente"
        android:text="Nombre Negocio" />

    <EditText
        android:id="@+id/txtNomNegManCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/txtNomManCliente"
        android:layout_below="@+id/textView3"
        android:ems="10" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNomNegManCliente"
        android:layout_centerVertical="true"
        android:text="Dirección Cliente" />

    <EditText
        android:id="@+id/txtTelManCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/txtDirManCliente"
        android:layout_below="@+id/textView5"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/txtDirManCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/txtNomNegManCliente"
        android:layout_below="@+id/textView4"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDirManCliente"
        android:layout_below="@+id/txtDirManCliente"
        android:text="Teléfono Cliente" />

    <Button
        android:id="@+id/btnGuardarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/txtTelManCliente"
        android:layout_marginTop="34dp"
        android:text="Guardar" />

    <Button
        android:id="@+id/btnLimpiarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnEliminarCliente"
        android:layout_alignBottom="@+id/btnEliminarCliente"
        android:layout_toRightOf="@+id/btnEliminarCliente"
        android:text="Limpiar" />

    <Button
        android:id="@+id/btnEliminarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnGuardarCliente"
        android:layout_alignBottom="@+id/btnGuardarCliente"
        android:layout_toRightOf="@+id/btnGuardarCliente"
        android:text="Eliminar" />

</RelativeLayout>
